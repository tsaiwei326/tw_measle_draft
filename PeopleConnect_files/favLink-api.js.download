peopleconnectApp.factory('FavLinksApi', ['$window', '$rootScope', '$http',
    function (win, $rootScope, $http) {
        var _api = {},
            root = "/webdataapi/dashboard/";

        /* Available Endpoints */
        var routes = {
            addfavLinks: "AddLinks",
            getfavLinks: "GetLinks",
            deletefavLinks: "DeleteLinks",
            swapfavLinks: "SwapDashboardLinks"
        }


        /*
        * Add fav links
        */
        _api.POST_addfavLinks = function (data, params) {
            //var jsonData = angular.toJson(data);
            var jsonData = JSON.stringify(data);
            return $http({
                method: 'POST',
                url: root + routes.addfavLinks + '?userTableAutogeneratedId=' + params.userTableAutogeneratedId,
                data: jsonData,
                headers: { 'Content-Type': 'application/json' }
            })
        }


        /*
        * Get fav links
        */
        _api.GET_getfavLinks = function (params) {
            return $http({
                method: 'GET',
                url: root + routes.getfavLinks,
                params: params,
                headers: { 'Content-Type': 'application/json' }
            })
        }


        /*
        * Delete fav link
        */
        _api.POST_deletefavLinks = function (params) {
            return $http({
                method: 'POST',
                url: root + routes.deletefavLinks,
                params: params,
                headers: { 'Content-Type': 'application/json' }
            })
        }


        /*
        * Swap fav links
        */
        _api.POST_swapfavLinks = function (data, params) {
            var jsonData = angular.toJson(data);
            return $http({
                method: 'POST',
                url: root + routes.swapfavLinks,
                params: params,
                data: jsonData,
                headers: { 'Content-Type': 'application/json; charset=UTF-8' }
            });
        }
        
        return _api;
}]);


